# Makefile

all: main

gaussian:
	gcc -Wall -Wextra -Werror -O3 -C -Iinclude "../auxiliary/auxiliary.c" filter_gaussian.c `pkg-config --cflags sdl2 SDL2_image` `pkg-config --libs sdl2 SDL2_image` -o gaussian -lm -ldl -D__NO_INLINE__

main:
	gcc -Wall -Wextra -Werror -O3 -C -Iinclude temp_main.c "../_structs/queue.c" "../_structs/p_queue.c" "../auxiliary/auxiliary.c" tool_bucket.c `pkg-config --cflags sdl2 SDL2_image` `pkg-config --libs sdl2 SDL2_image` -o main -lm -ldl -D__NO_INLINE__

clean_test:
	rm -f *.d
	rm -f *.o
	rm -f main
	rm -f *.jpeg

clean:
	rm -f *.d
	rm -f *.o
	rm -f main
	rm -f *.jpeg

# END Makefile
